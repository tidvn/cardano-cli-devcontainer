{
    "name": "Cardano Node Development",
    "image": "ghcr.io/blinklabs-io/cardano-node:latest",
    "runArgs": [
      "--detach",
      "--name", "cardano-node",
      "-v", "node-data:/data/db",
      "-v", "node-ipc:/ipc",
      "-e", "NETWORK=preprod",
      "-p", "3001:3001"
    ],
    "postCreateCommand": "docker logs -f cardano-node",
    "remoteUser": "vscode"
  }
  