{
  "name": "Cardano Node",
  "image": "ghcr.io/blinklabs-io/cardano-node:main",
  "runArgs": [
    "--detach",
    "--name", "cardano-node",
    "--volume", "node-data:/data/db",
    "--volume", "node-ipc:/ipc",
    "--env", "NETWORK=preprod",
    "--publish", "3001:3001",
    "tail", "-f", "/dev/null"  // Giữ container chạy
  ],
  "mounts": [
    "source=node-data,target=/data/db",
    "source=node-ipc,target=/ipc"
  ],
  "shutdownAction": "none"
}