{
    "name": "Cardano Node Development",
    "image": "inputoutput/cardano-node:latest",
    "runArgs": [
        "-it",
        "--name", "my-cardano-node",
        "-p", "3001:3001",
        "-v", "${localWorkspaceFolder}/config:/config",
        "-v", "${localWorkspaceFolder}/state:/state" 
    ],
    "postCreateCommand": "cardano-node run --topology /config/mainnet-topology.json --database-path /state --port 3001 --config /config/mainnet-config.yaml",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "workspaceFolder": "."
}